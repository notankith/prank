      box-shadow: 0 8px 16px rgba(0,0,0,0.3);
      transition: transform 0.1s;
    }
    #start:active {
      transform: scale(0.96);
    }

    #overlay {
      position: fixed;
      inset: 0;
      pointer-events: none;
      z-index: 9998;
      opacity: 0;
      transition: opacity 0.3s;
    }

    .flash-text {
      position: fixed;
      inset: 0;
